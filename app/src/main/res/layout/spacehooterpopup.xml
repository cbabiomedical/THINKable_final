    <ImageView
        android:id="@+id/colorGameLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/space" />

    <TextView
        android:id="@+id/colorGameInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorGameLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:justificationMode="inter_word"
        android:layout_gravity="center_vertical|end"
        android:text="Concentrate on the moving spaceship and shoot with the shooter to get points.While shooting the spaceship,touch the bullets to save the three life spans given to you
Play the game and get moew points based on the number of shoots. Good luck !!!"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:text="OK"
        android:textColor="@color/white" />



