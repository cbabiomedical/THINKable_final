    <ImageView
        android:id="@+id/colorGameLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/duckhuntimg" />

    <TextView
        android:id="@+id/colorGameInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorGameLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:justificationMode="inter_word"
        android:layout_gravity="center_vertical|end"
        android:text="Focus on the birds and shoot them with the ball to get points. Duck on the target,pull and release to shoot the birds. If more than 5 birds are missed game will be over. Shoot more birds to get more points"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:text="OK"
        android:textColor="@color/white" />



