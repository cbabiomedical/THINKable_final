<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Concentration_popup"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <View
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="#0D559E"
            android:visibility="visible" />

        <View
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="#010334"
            android:visibility="gone" />
        <RelativeLayout
            android:layout_marginStart="20dp"
            android:id="@+id/gamespop"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/gamespop1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnpref"/>


            <TextView
                android:id="@+id/gamespop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:text="Games"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/segoepr" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/musicpop"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@+id/gamespop"



            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/musicpop1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnpref"/>


            <TextView
                android:id="@+id/musicpop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:text="Music"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/segoepr" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meditationpop"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@+id/musicpop"



            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/meditationpop1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnpref"/>


            <TextView
                android:id="@+id/meditationpop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Meditatoin"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/segoepr" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/canclepop"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@+id/meditationpop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/canclepop1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnpref"/>


            <TextView
                android:id="@+id/logout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/redBtnColor"
                android:textSize="16sp"
                android:fontFamily="@font/segoepr" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>